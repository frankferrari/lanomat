<div id="flash" class="fixed top-4 left-1/2 -translate-x-1/2 z-50">
  <% if local_assigns[:notice] %>
    <div class="bg-green-600/90 backdrop-blur-sm text-white px-4 py-2 rounded-lg shadow-lg">
      <%= notice %>
    </div>
  <% end %>
  <% if local_assigns[:alert] %>
    <div class="bg-red-600/90 backdrop-blur-sm text-white px-4 py-2 rounded-lg shadow-lg">
      <%= alert %>
    </div>
  <% end %>
</div>
