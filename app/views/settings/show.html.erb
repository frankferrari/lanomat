<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-pink-600 bg-clip-text text-transparent">Settings</h1>
    <p class="text-slate-400 mt-2">Manage voting rules and game validation.</p>
  </div>

  <%= form_with url: settings_path, method: :patch, class: "space-y-8" do |f| %>

    <!-- Voting Rules Section -->
    <section class="bg-slate-800/50 rounded-xl p-6 border border-slate-700">
      <h2 class="text-xl font-bold text-white mb-4 flex items-center gap-2">
        <%= heroicon "trophy", variant: :outline, options: { class: "w-6 h-6 text-purple-400" } %>
        Voting Rules
      </h2>

      <div class="space-y-6">
        <!-- Vote Count -->
        <div class="flex items-center justify-between p-4 bg-slate-900/50 rounded-lg border border-slate-700/50">
          <div>
            <label class="block text-sm font-medium text-white">Votes per Game</label>
            <p class="text-xs text-slate-400 mt-1">Number of times a user can vote for a single game.</p>
          </div>
          <%= f.number_field :votes_per_game, value: 3, class: "w-24 bg-slate-800 border-slate-600 text-white rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <!-- Block Previous Game -->
        <div class="flex items-center justify-between p-4 bg-slate-900/50 rounded-lg border border-slate-700/50">
          <div>
            <label class="block text-sm font-medium text-white">Block Previous Game</label>
            <p class="text-xs text-slate-400 mt-1">Prevent the previously played game from being voted on.</p>
          </div>
          <div class="relative inline-flex items-center cursor-pointer">
            <%= f.check_box :block_previous_game, class: "sr-only peer" %>
            <div class="w-11 h-6 bg-slate-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-purple-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
          </div>
        </div>

        <!-- Voting Countdown -->
        <div class="p-4 bg-slate-900/50 rounded-lg border border-slate-700/50">
          <div class="flex items-center justify-between mb-4">
            <div>
              <label class="block text-sm font-medium text-white">Voting Countdown</label>
              <p class="text-xs text-slate-400 mt-1">Enable a time limit for voting.</p>
            </div>
            <div class="relative inline-flex items-center cursor-pointer">
              <%= f.check_box :enable_voting_countdown, class: "sr-only peer/countdown" %>
              <div class="w-11 h-6 bg-slate-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-purple-500 rounded-full peer peer-checked/countdown:after:translate-x-full peer-checked/countdown:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked/countdown:bg-purple-600"></div>
              
              <!-- Conditional Field -->
              <div class="hidden peer-checked/countdown:block ml-4">
                 <div class="flex items-center gap-2">
                    <%= f.number_field :voting_countdown_seconds, placeholder: "60", class: "w-24 bg-slate-800 border-slate-600 text-white rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
                    <span class="text-sm text-slate-400">seconds</span>
                 </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Wheel of Fortune Section -->
    <section class="bg-slate-800/50 rounded-xl p-6 border border-slate-700">
      <h2 class="text-xl font-bold text-white mb-4 flex items-center gap-2">
        <%= heroicon "arrow-path", variant: :outline, options: { class: "w-6 h-6 text-pink-400" } %>
        Wheel of Fortune
      </h2>
      
      <div class="p-4 bg-slate-900/50 rounded-lg border border-slate-700/50">
          <div class="flex items-center justify-between mb-4">
             <div>
                <label class="block text-sm font-medium text-white">Enable Wheel of Fortune</label>
                <p class="text-xs text-slate-400 mt-1">Spin the wheel after voting ends to decide the game.</p>
             </div>
             <div class="relative inline-flex items-center cursor-pointer">
                <%= f.check_box :enable_wheel, class: "sr-only peer/wheel" %>
                <div class="w-11 h-6 bg-slate-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-pink-500 rounded-full peer peer-checked/wheel:after:translate-x-full peer-checked/wheel:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked/wheel:bg-pink-600"></div>
             </div>
          </div>

          <!-- Conditional Sub-settings -->
           <div class="hidden peer-checked/wheel:block space-y-4 border-t border-slate-700 pt-4 mt-4">
               
               <!-- Use Checkbox for Games Included as requested -->
               <div class="flex items-center justify-between">
                  <div>
                    <label class="block text-sm font-medium text-white">Include Top Games</label>
                    <p class="text-xs text-slate-400 mt-1">Include only the top voted games in the wheel.</p>
                  </div>
                  <div class="relative inline-flex items-center cursor-pointer">
                   <%= f.check_box :wheel_include_top_games, class: "sr-only peer" %>
                   <div class="w-11 h-6 bg-slate-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-pink-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-600"></div>
                  </div>
               </div>


               <!-- Proportional Representation -->
               <div class="flex items-center justify-between">
                  <div>
                    <label class="block text-sm font-medium text-white">Proportional Representation</label>
                    <p class="text-xs text-slate-400 mt-1">Wheel slice size depends on the number of votes.</p>
                  </div>
                  <div class="relative inline-flex items-center cursor-pointer">
                   <%= f.check_box :wheel_proportional, class: "sr-only peer" %>
                   <div class="w-11 h-6 bg-slate-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-pink-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-pink-600"></div>
                  </div>
               </div>
           </div>
      </div>
    </section>

    <div class="flex justify-end pt-4">
      <%= f.submit "Save Settings", class: "px-6 py-2.5 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-500 hover:to-pink-500 text-white font-bold rounded-lg shadow-lg hover:shadow-purple-500/25 transition-all transform hover:scale-[1.02] active:scale-[0.98]" %>
    </div>
  <% end %>
</div>
