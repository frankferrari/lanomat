<% 
   bonus_used = current_user.votes.sum { |v| (v.weight || 1) - 1 } 
   bonus_total = Current.game_session.bonus_votes || 0
   bonus_remaining = bonus_total - bonus_used
%>
<% if bonus_total > 0 %>
<div id="bonus_votes_counter" class="flex flex-wrap items-center gap-1 sm:gap-2 text-[10px] sm:text-xs text-slate-400">
  <span class="<%= bonus_remaining > 0 ? 'text-green-400' : 'text-slate-500' %> font-bold px-1.5 py-0.5 bg-slate-900 border border-slate-800 rounded-md">
    <%= bonus_remaining %> BONUS VOTES
  </span>
</div>
<% else %>
  <div id="bonus_votes_counter" class="hidden"></div>
<% end %>
