<%# This template updates the current user's view after voting %>
<%# Other users receive updates via the broadcast in Vote#broadcast_game_update %>

<%= turbo_stream.replace dom_id(@game, @view_mode.to_sym) do %>
  <%= render partial: "votes/card_#{@view_mode}", locals: { game: @game, voted: @voted } %>
<% end %>

<%= turbo_stream.replace "bonus_votes_counter" do %>
  <%= render partial: "votes/bonus_counter" %>
<% end %>
