<%= turbo_stream_from "games" %>

<div class="min-h-screen bg-slate-950 text-slate-100 font-sans selection:bg-purple-500/30 pb-20">
    <%= render "shared/header" %>
    <main class="max-w-6xl mx-auto p-4 sm:p-6 space-y-12">
        <div class="space-y-8">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-bold">Game Management</h2>
                    <p class="text-slate-400 text-sm">Global library shared by everyone</p>
                </div>
            </div>

            <!-- New Game Entry Form -->
            <%= render "games/form", game: @new_game %>

            <!-- Interactive Game Library Table -->
            <div class="bg-slate-900 rounded-2xl border border-slate-800 overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full text-left text-sm">
                        <thead class="bg-slate-950 text-slate-500 uppercase text-xs font-black tracking-widest border-b border-slate-800">
                            <tr>
                                <th class="px-6 py-4">Game Title</th>
                                <th class="px-6 py-4">Tags</th>
                                <th class="px-6 py-4">Price</th>
                                <th class="px-6 py-4">Max Players</th>
                                <th class="px-6 py-4 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-800">
                            <%= render partial: "games/table_row", collection: @games, as: :game %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>
