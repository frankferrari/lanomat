<div class="space-y-8">
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-2xl font-bold">Game Management</h2>
            <p class="text-slate-400 text-sm">Global library shared by everyone</p>
        </div>
    </div>

    <%= render "games/manage/form", game: @new_game %>

    <div class="bg-slate-900 rounded-2xl border border-slate-800 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm">
                <thead class="bg-slate-950 text-slate-500 uppercase text-xs font-black tracking-widest border-b border-slate-800">
                    <tr>
                        <th class="px-6 py-4">Game Title</th>
                        <th class="px-6 py-4">Tags</th>
                        <th class="px-6 py-4">Price</th>
                        <th class="px-6 py-4">Max Players</th>
                        <th class="px-6 py-4 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-800">
                    <% @games.each do |game| %>
                        <tr class="hover:bg-slate-800/30 transition-colors group">
                            <td class="px-6 py-3">
                                <%= form_with(model: game, data: { controller: "auto-submit", action: "input->auto-submit#submit change->auto-submit#submit" }) do |f| %>
                                    <%= f.text_field :name, class: "bg-slate-800/30 border border-slate-700/50 focus:border-purple-500/50 focus:ring-1 focus:ring-purple-500/30 w-full font-bold text-slate-200 px-3 py-2 placeholder-slate-600 rounded-lg transition-all" %>
                                <% end %>
                            </td>
                            <td class="px-6 py-3">
                                <div class="flex gap-2 items-center">
                                    <div class="flex-1 flex flex-wrap gap-1 min-h-10 items-center">
                                        <% if game.tags.any? %>
                                            <% game.tags.each do |tag| %>
                                                <span class="inline-flex items-center gap-1 px-2 py-1 rounded-lg bg-purple-600/20 border border-purple-500/30 text-purple-300 text-xs font-black uppercase tracking-tighter">
                                                    <%= tag.name %>
                                                </span>
                                            <% end %>
                                        <% else %>
                                            <span class="text-slate-500 text-xs">No tags</span>
                                        <% end %>
                                    </div>
                                    <label for="tag-picker-<%= game.id %>" class="p-2 text-slate-600 hover:text-purple-500 transition-colors cursor-pointer">
                                        <%= heroicon "tag", variant: :outline, options: { class: "w-4 h-4" } %>
                                    </label>
                                </div>
                                <%= render "games/manage/tags", game: game %>
                            </td>
                            <td class="px-6 py-3">
                                <%= form_with(model: game, data: { controller: "auto-submit", action: "input->auto-submit#submit change->auto-submit#submit" }) do |f| %>
                                    <%= f.text_field :price, class: "bg-slate-800/30 border border-slate-700/50 focus:border-purple-500/50 focus:ring-1 focus:ring-purple-500/30 text-slate-400 px-3 py-2 w-full rounded-lg transition-all" %>
                                <% end %>
                            </td>
                            <td class="px-6 py-3">
                                <%= form_with(model: game, data: { controller: "auto-submit", action: "input->auto-submit#submit change->auto-submit#submit" }) do |f| %>
                                    <%= f.number_field :max_players, class: "bg-slate-800/30 border border-slate-700/50 focus:border-purple-500/50 focus:ring-1 focus:ring-purple-500/30 text-slate-400 px-3 py-2 w-20 rounded-lg transition-all" %>
                                <% end %>
                            </td>
                            <td class="px-6 py-3 text-right">
                                <%= button_to game_path(game), method: :delete, class: "p-2 text-slate-600 hover:text-red-500 transition-colors opacity-0 group-hover:opacity-100", form: { data: { turbo_confirm: "Delete this game completely?" } } do %>
                                    <%= heroicon "trash", variant: :outline, options: { class: "w-4 h-4" } %>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
